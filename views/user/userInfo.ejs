</div>
<!-- Edit Address Modal -->
<div class="modal fade" id="editAddressModal" tabindex="-1" aria-labelledby="editAddressModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editAddressModalLabel">Edit Address</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Create a form for editing the address -->
        <form id="editAddressForm" onsubmit="editAddressForm ()">
          <!-- Input fields for editing address fields -->
          <div class="mb-3">
            <label for="editNewname" class="form-label">Name</label>
            <input type="text" class="form-control" id="editNewname" name="newname" value="<%= user.address && user.address[0] ? user.address[0].newname : '' %>">
          </div>
          <div class="mb-3">
            <label for="editHouse" class="form-label">House</label>
            <input type="text" class="form-control" id="editHouse" name="house" value="<%= user.address && user.address[0] ? user.address[0].house : '' %>">
          </div>
          <div class="mb-3">
            <label for="editPost" class="form-label">Post</label>
            <input type="text" class="form-control" id="editPost" name="post" value="<%= user.address && user.address[0] ? user.address[0].post : '' %>">
          </div>
          <!-- Add input fields for other address fields here -->
        
          <!-- Submit button to save changes -->
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
        
      </div>
    </div>
  </div>
</div>
<script>
function removeAddress() {
    // Send an AJAX request to remove the address
    fetch('/removeAddress', {
      method: 'POST',
    })
      .then((response) => response.json())
      .then((data) => {
        // Handle the response (e.g., show success message)
        console.log(data);
        // Close the modal
        window.location.reload()
        // $('#removeAddressModal').modal('hide');
      })
      .catch((error) => {
        console.error(error);
      });
  };
</script>

<script>
  function editAddressForm () {

    // Get the form data
    const formData = new FormData(this);

    // Send an AJAX request to update the address
    fetch('/updateAddress', {
      method: 'POST',
      body: formData,
    })
      .then((response) => response.json())
      .then((data) => {
        // Handle the response (e.g., show success message)
        console.log(data);
        // Close the modal
        $('#editAddressModal').modal('hide');
      })
      .catch((error) => {
        console.error(error);
      });
  };
</script>         <!-- Modal -->
